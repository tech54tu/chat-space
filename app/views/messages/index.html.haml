-#   グループを作成しました

.wrapper
  .chat-side
    .side-header
      .side-header__user-name
        = current_user.name
      %ul.user-menu
        %li.user-menu__new-group
          =link_to "https://www.sample.com/", class: "user-menu__new-group" do
            =fa_icon 'cog'
        %li.user-menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'pencil-square-o', class: 'icon'

    .groups
      .groups__name
        サンプルグループ１
      .groups__message
        サンプルメッセージ１        

  .chat-main
    .main-header
      .current-group
        %h2.current-group__name
          サンプルグループ４
          %ul.member-list
            Member：
            %li<>
              サンプルユーザー１
            %li<>
              サンプルユーザー２
            %li<>
              サンプルユーザー３
      =link_to '' do
        .main-header__edit-btn        
          Edit

    .messages
      .upper-info
        %p.upper-info__user
          サンプルユーザー１
        %p.upper-info__data
          2018/06/07(Fri) 15:01:30
      %p.messages__text    
        サンプルメッセージ１
      .upper-info
        %p.upper-info__user
          サンプルユーザー２
        %p.upper-info__data
          2018/06/07(Fri) 15:02:30
      %p.messages__text    
        サンプルメッセージ２
    .form
      .new-message
        .input-box
          %input{:type => "text", :placeholder => "type a message", class: "input-box__text"}
        .image-label
          =fa_icon 'picture-o'
        .new-message__submit-btn Send